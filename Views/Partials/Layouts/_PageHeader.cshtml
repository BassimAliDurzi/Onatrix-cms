@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    var current = Umbraco.AssignedContentItem ?? Model;
    var root = current?.Root();
}

@if (current != null && root != null)
{
<section class="relative overflow-hidden bg-[#f7f7f5] py-16 md:py-20">

    <div class="pointer-events-none absolute -left-24 bottom-[-6rem] h-72 w-72 rounded-full border border-slate-200/60"></div>
    <div class="pointer-events-none absolute -right-24 -top-20 h-80 w-80 rounded-full border border-slate-200/50"></div>

    <div class="relative z-10 max-w-4xl mx-auto px-4 text-center">

        <h1 class="text-3xl md:text-4xl font-bold tracking-tight text-[#4f5955]">
            @current.Name
        </h1>

        <div class="mt-3 flex items-center justify-center gap-3 text-sm">

            <a href="@root.Url()" class="text-slate-500 hover:text-slate-700">
                Home
            </a>
            <span class="text-slate-400">&#8250;</span>

            @if (current.Level > root.Level + 1)
                {
                    var parent = current.Parent;
                    if (parent != null && parent.Id != root.Id)
                    {
            <a href="@parent.Url()" class="text-slate-500 hover:text-slate-700">
                @parent.Name
            </a>
            <span class="text-slate-400">›</span>
                    }
                }

            <span class="text-[#c8b59e] font-semibold">
                @current.Name
            </span>
        </div>
    </div>
</section>
}
