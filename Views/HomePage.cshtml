    <div class="container mx-auto px-4 space-y-10">
        <div class="text-center max-w-3xl mx-auto">
            @if (!string.IsNullOrWhiteSpace(trustedTitle))
            {
            <h2 class="text-3xl md:text-4xl font-bold text-[#4f5955] mb-4">
