@using Umbraco.Cms.Core.Models
@using Umbraco.Extensions
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<HomePage>

@{
    Layout = "MainLayout.cshtml";
}

<section class="relative py-[7rem]">
    <div class="absolute inset-0">
        @if (Model.HeroBgImage != null)
        {
        <img src="@Model.HeroBgImage.Url()" class="w-full h-full object-cover" alt="" />
        }
        <div class="absolute inset-0 bg-gray/10"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
        <div class="w-full md:w-7/12 lg:w-5/12 flex flex-col gap-8">
            <h1 class="text-[2.75rem] md:text-[3.5rem] lg:text-[4.5rem] text-[#4f5955] font-bold leading-none">
                @Model.HeroTitle
            </h1>

            <div class="rte text-slate-700">
                @Html.Raw(Model.HeroText)
            </div>

            <a class="bg-[#4f5955] text-white py-3 px-10 no-underline rounded cursor-pointer self-start font-bold"
               href="@(Model.HeroLink?.Url ?? "#")">
                @(Model.HeroLink?.Name ?? "Contact us")
            </a>
        </div>
    </div>
</section>

@{
    var introDescription = Model.Value<string>("introDescription");
    var introSignature = Model.Value<MediaWithCrops>("introSignature");
    var introFounder = Model.Value<string>("introFounder");
}

@if (!string.IsNullOrWhiteSpace(Model.IntroTitle?.ToString())
    || !string.IsNullOrWhiteSpace(Model.IntroText?.ToString()))
{
<section class="py-20 bg-white">
    <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-2 gap-12 items-start">

            <div class="space-y-6 max-w-xl">
                <p class="text-xs font-semibold tracking-[0.25em] uppercase text-[#d8b98c]">
                    ABOUT US
                </p>

                <h2 class="text-3xl md:text-4xl font-bold text-[#4f5955]">
                    @Model.IntroTitle
                </h2>

                @if (!string.IsNullOrWhiteSpace(Model.IntroText?.ToString()))
                {
                <p class="text-base text-[#4f5955] italic">
                    @Model.IntroText
                </p>
                }

                @if (!string.IsNullOrWhiteSpace(introDescription))
                {
                <div class="rte text-slate-700">
                    @Html.Raw(introDescription)
                </div>
                }

                @if (introSignature != null || !string.IsNullOrWhiteSpace(introFounder))
                {
                <div class="mt-6 space-y-2">
                    @if (introSignature != null)
                        {
                    <img src="@introSignature.Url()" alt="@introFounder"
                         class="h-16 w-auto" />
                        }

                    @if (!string.IsNullOrWhiteSpace(introFounder))
                        {
                    <p class="text-xs text-slate-500">
                        @introFounder
                    </p>
                        }
                </div>
                }
            </div>

            <div class="flex justify-end">
                <div class="w-full md:w-[420px] lg:w-[460px] bg-white rounded-none shadow-xl border border-slate-100 relative -top-40">
                    <div class="bg-[#4f5955] px-8 py-6">
                        <h3 class="text-2xl font-bold text-white">
                            Request a call back
                        </h3>
                    </div>

                    <div class="px-8 py-8 space-y-6">
                        <p class="text-sm text-slate-600 leading-relaxed">
                            Dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur
                            excepteur sint occaecat
                        </p>

                        <form class="space-y-4" method="post">
                            <input type="text" name="name" placeholder="Name"
                                   class="w-full border border-slate-200 bg-[#fbfbfb] px-4 py-3 text-sm text-slate-700 outline-none focus:border-[#4f5955] focus:bg-white" />

                            <input type="email" name="email" placeholder="Email address"
                                   class="w-full border border-slate-200 bg-[#fbfbfb] px-4 py-3 text-sm text-slate-700 outline-none focus:border-[#4f5955] focus:bg-white" />

                            <input type="tel" name="phone" placeholder="Phone"
                                   class="w-full border border-slate-200 bg-[#fbfbfb] px-4 py-3 text-sm text-slate-700 outline-none focus:border-[#4f5955] focus:bg-white" />

                            <select name="service"
                                    class="w-full border border-slate-200 bg-[#fbfbfb] px-4 py-3 text-sm text-slate-700 outline-none focus:border-[#4f5955] focus:bg-white">
                                <option>Financial consulting</option>
                            </select>

                            <button type="submit"
                                    class="w-full mt-2 bg-[#e9dfc3] text-[#4f5955] font-semibold py-3 text-sm tracking-wide">
                                Submit
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
}

