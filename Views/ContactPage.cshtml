@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = "mainLayout.cshtml";
    <partial name="Partials/Layouts/_PageHeader" />
}

<section class="bg-white py-16 lg:py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div class="flex justify-center lg:justify-start">
            <div class="relative max-w-md">
                     <img src="http://localhost:30778/media/zyqpgtto/img-5-e1695109900349-1.svg"
                     alt="Onatrix support specialist"
                     class="relative z-10 max-h-[420px] w-auto object-contain drop-shadow-xl" />
            </div>
        </div>

        <div class="space-y-6 lg:pl-4">
            <h2 class="text-3xl sm:text-4xl font-semibold tracking-tight text-slate-900">
                Let us know about<br />
                your next project
            </h2>

            <p class="text-slate-600 max-w-md">
                Tell us a bit about your upcoming project and how Onatrix can help.
                We’ll get back to you with ideas, suggestions and next steps.
            </p>

            <div class="space-y-4 text-sm">
                <div class="flex items-start gap-3">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#D9C3A9]"" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.6"
                                  d="M12 21s-6-4.35-6-10a6 6 0 1 1 12 0c0 5.65-6 10-6 10z" />
                            <circle cx="12" cy="11" r="2.5" />
                        </svg>
                    <div>
                        <p class="font-semibold text-slate-800">Office location</p>
                        <p class="text-slate-600">
                            Klostergatanstudion 52, 111 52 Stockholm
                        </p>
                    </div>
                </div>

                <div class="flex items-start gap-3">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#D9C3A9]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.6"
                                  d="M3 5.75C3 4.784 3.784 4 4.75 4h2.143c.8 0 1.49.528 1.692 1.304l.753 2.93a1.75 1.75 0 0 1-.506 1.72l-1.14 1.094a.75.75 0 0 0-.073.992A12.02 12.02 0 0 0 12.96 16.5a.75.75 0 0 0 .99-.078l1.17-1.225a1.75 1.75 0 0 1 1.78-.45l2.782.8A1.75 1.75 0 0 1 21 17.25V19.5A1.5 1.5 0 0 1 19.5 21C11.492 21 3 12.508 3 4.5 3 4.224 3.224 4 3.5 4H4.75" />
                        </svg>
                    <div>
                        <p class="font-semibold text-slate-800">Phone number</p>
                        <p class="text-slate-600">+46 8 122 456 75</p>
                    </div>
                </div>

                <div class="flex items-start gap-3">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#D9C3A9]"" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.6"
                                  d="M4 6.75A2.75 2.75 0 0 1 6.75 4h10.5A2.75 2.75 0 0 1 20 6.75v10.5A2.75 2.75 0 0 1 17.25 20H6.75A2.75 2.75 0 0 1 4 17.25z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.6"
                                  d="m5.5 7.5 6.07 4.05a1.25 1.25 0 0 0 1.36 0L19 7.5" />
                        </svg>
                    <div>
                        <p class="font-semibold text-slate-800">E-mail address</p>
                        <p class="text-slate-600">hello@onatrixcms.com</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

<section class="relative bg-white pb-16 lg:pb-20">
    <div class="relative">
        <div class="w-full h-[100px] md:h-[700px] lg:h-[750px] overflow-hidden">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d64779.58743618623!2d18.022!3d59.334!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x465f9d641f2f5db7%3A0xdeadbeefdeadbeef!2sStockholm!5e0!3m2!1sen!2sse!4v1700000000000"
                    class="w-full h-full border-0"
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>


        <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
            <div class="pointer-events-auto w-full 10-10 max-w-3xl px-4 sm:px-6">
                <div class="rounded-3xl bg-white shadow-xl shadow-slate-900/15 px-6 py-7 sm:px-10 sm:py-10">
                    <p class="text-xs font-semibold tracking-[0.18em] uppercase text-slate-400 text-center">
                        Request a call back
                    </p>
                    <h3 class="mt-3 text-2xl sm:text-3xl font-semibold text-slate-900 text-center">
                        Let us know about your<br class="hidden sm:block" />
                        next project
                    </h3>
                    <p class="mt-3 text-sm text-slate-500 text-center max-w-xl mx-auto">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas
                        convallis, turpis semper sagittis lobortis, erat metus efficitur purus.
                    </p>

                    <form class="mt-7 mb-10 space-y-4" method="post">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
                            <div>
                                <label class="block text-xs font-medium text-slate-600 mb-1">
                                    Name
                                </label>
                                <input type="text"
                                       name="name"
                                       class="block w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 outline-none transition
                                              focus:border-[#2c7a64] focus:ring-2 focus:ring-[#2c7a64]/30"
                                       required />
                            </div>
                            <div>
                                <label class="block text-xs font-medium text-slate-600 mb-1">
                                    Phone
                                </label>
                                <input type="text"
                                       name="phone"
                                       class="block w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 outline-none transition
                                              focus:border-[#2c7a64] focus:ring-2 focus:ring-[#2c7a64]/30" />
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-xs font-medium text-slate-600 mb-1">
                                    Email address
                                </label>
                                <input type="email"
                                       name="email"
                                       class="block w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 outline-none transition
                                              focus:border-[#2c7a64] focus:ring-2 focus:ring-[#2c7a64]/30"
                                       required />
                            </div>
                            <div>
                                <label class="block text-xs font-medium text-slate-600 mb-1">
                                    Service
                                </label>
                                <select name="service"
                                        class="block w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 outline-none transition
                                               focus:border-[#2c7a64] focus:ring-2 focus:ring-[#2c7a64]/30">
                                    <option>Financial consulting</option>
                                </select>
                            </div>
                        </div>

                        <div class="mt-4 flex justify-center">
                            <button type="submit"
                                    class="inline-flex items-center justify-center rounded-md bg-[#4f5955] px-8 py-2.5 text-sm font-semibold text-white
                                           shadow-sm shadow-slate-900/20 outline-none transition
                                           hover:bg-[#275f50] focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-[#2c7a64]">
                                Submit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
